{
  "kind": "collectionType",
  "collectionName": "school_applications",
  "info": {
    "singularName": "school-application",
    "pluralName": "school-applications",
    "displayName": "SchoolApplication",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "school": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::school.school",
      "inversedBy": "applications"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "school_applications"
    },
    "answers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::answer.answer",
      "mappedBy": "school_application"
    },
    "state": {
      "type": "enumeration",
      "enum": [
        "created",
        "submitted",
        "reviewed",
        "approved",
        "revoked"
      ],
      "default": "created"
    },
    "step": {
      "type": "integer",
      "default": 0
    },
    "reference1": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::reference.reference"
    },
    "reference2": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::reference.reference"
    },
    "applicationFeePaid": {
      "type": "boolean",
      "default": false,
      "required": false
    }
  }
}
